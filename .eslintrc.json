{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": { "destructuring": true },
    "rules": {
        "react/jsx-no-target-blank": [0],
        "react/prop-types": 0,
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "semi": [
            "error",
            "always"
        ],
        "operator-linebreak": [
            "error", 
            "before"
        ]
    }
}